<div class="trip-card col-lg-4 col-md-6 col-sm-12">
  {{#link-to 'trip' trip}}
  <h2 class="trip-header">{{trip.location}}</h2>
  {{/link-to}}

  <p>{{trip.start_date}}</p>
  <p>{{trip.end_date}}</p>
  <p>{{trip.who}}</p>
  <p>{{trip.more_info}}</p>

  {{#link-to 'trip' trip}}
  <button class="btn btn-primary">Plan the trip!</button>
  {{/link-to}}
  <button class="btn btn-info" {{action 'edit'}}>Edit</button>
  <button class="btn btn-danger" {{action 'delete'}}>Delete</button>

  <br>
  <br>
</div>
